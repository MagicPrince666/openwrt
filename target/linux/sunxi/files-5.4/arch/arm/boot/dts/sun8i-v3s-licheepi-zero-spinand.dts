&spi0 {
	#address-cells = <1>;
	#size-cells = <0>;
	pinctrl-names = "default";
	pinctrl-0 = <&spi0_pins &spi0_pins_cs1>;
	spi-num-chipselects = <2>;
	cs-gpios = <&pio 2 2 GPIO_ACTIVE_HIGH>, <&pio 6 3 GPIO_ACTIVE_HIGH>;
	status = "okay";

	flash: spinand@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		reg = <0>;
		compatible = "spi-nand";
		spi-max-frequency = <50000000>;
		status = "okay";

		boot@0 {
			label = "boot";
			reg = <0x0000000 0x0100000>;
		};

		ubi0@100000 {
			label = "ubi0";
			reg = <0x0100000 0x0000000>;
		};
	};

	spidev: spidev@1 {
		reg = <1>;
		compatible = "rohm,dh2228fv";
		spi-max-frequency = <50000000>;
		status = "okay";
	};
};

&tcon0 {
	pinctrl-names = "default";
	pinctrl-0 = <&lcd_rgb666_pins_a>;
	status = "okay";
};

&tcon0_out {
	tcon0_out_lcd: endpoint@0 {
		reg = <0>;
		remote-endpoint = <&panel_input>;
	};
};

&lradc {
	vref-supply = <&reg_vcc3v0>;
	status = "okay";

	button-200 {
		label = "Volume Up";
		linux,code = <KEY_VOLUMEUP>;
		channel = <0>;
		voltage = <200000>;
	};

	button-400 {
		label = "Volume Down";
		linux,code = <KEY_VOLUMEDOWN>;
		channel = <0>;
		voltage = <400000>;
	};

	button-600 {
		label = "Select";
		linux,code = <KEY_SELECT>;
		channel = <0>;
		voltage = <600000>;
	};

	button-800 {
		label = "Start";
		linux,code = <KEY_OK>;
		channel = <0>;
		voltage = <800000>;
	};
};
